#define _CRT_SECURE_NO_DEPRECATE
#include <stdio.h>
#include <locale.h>
#include <math.h>
#define M_PI            3.14159265358979323846


double fa(double x) {
	double y;
	if (x <= 3)
		y = pow(x, 2) - 3 * x + 9;
	else
		y = 1 / (pow(x, 3) + 3);
	return y;
}

double fb(double x) {
	double y1;
	y1 = x * exp(sin(pow(x * M_PI / 180, 2)));
	return y1;
}

void main() {
	setlocale(LC_ALL, "RUS");
	double x;

	printf("Введите значение x: ");
	scanf("%lf", &x);
	printf("fa(x)=%lf, fb(x)=%lf\n", fa(x), fb(x));
	printf("Произведение fa(x) и fb(x) = %lf\nРазность квадратов fa(x) и fb(x) = %lf\nУдвоенная сумма fa(x) и fb(x) = %lf\n", fa(x) * fb(x), pow(fa(x), 2) - pow(fb(x), 2), 2 * (fa(x) + fb(x)));
}
