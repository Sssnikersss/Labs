#define _CRT_SECURE_NO_DEPRECATE
#include <stdio.h>
#include <locale.h>
#include <time.h>


void main() {
    setlocale(LC_ALL, "RUS");
    struct tm* mytime;
    time_t t;
    t = time(NULL);
    mytime = localtime(&t);
    printf("Московское время: %02d:%02d:%02d\n", mytime->tm_hour, mytime->tm_min, mytime->tm_sec);
    printf("День недели (словами): %d\n", mytime->tm_wday);
}
