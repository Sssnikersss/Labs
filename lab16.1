#define _CRT_SECURE_NO_DEPRECATE
#include <stdio.h>
#include <locale.h>
#include <malloc.h>
#include <stdlib.h.>


double* full_elements(double* ptr_array, int N);
double func(double x);
int put_elements(double* ptr_array, int N);


void main() {
    setlocale(LC_ALL, "RUS");
    double* ptr_array;
    double* ptr_array1;
    int N;

    printf("Введите размер массива: ");
    scanf("%d", &N);
    printf("\n");

    ptr_array = (double*)malloc(N * sizeof(double));
    ptr_array1 = (double*)malloc(N * sizeof(double));
    if (ptr_array == NULL) {
        puts("error");
        return -1;
    }
    if (ptr_array1 == NULL) {
        puts("error");
        return -1;
    }

    full_elements(ptr_array, N);
    printf("Первый массив:\n");
    put_elements(ptr_array, N);
    printf("\n");

    printf("Второй массив:\n");
    for (int i = 0; i < N; i++) {
        ptr_array1[i] = ptr_array[i] + ptr_array[N - 1];
    }
    put_elements(ptr_array1, N);

    free(ptr_array);
    free(ptr_array1);
}

double* full_elements(double* ptr_array, int N) {
    double x = 1.3;
    double dx = (3.4 - 1.3) / N;
    for (int i = 0; i < N; i++) {
        ptr_array[i] = func(x);
        x += dx;
    }
}

double func(double x) {
    double result;
    result = 5 * pow(x, 3) + 2 * pow(x, 2) - 15 * x - 6;
    return result;
}

int put_elements(double* ptr_array, int N) {
    for (int i = 0; i < N; i++) {
        printf("A[%d] = %lf\n", i, ptr_array[i]);
    }
}
