//Вариант 1

#define _CRT_SECURE_NO_DEPRECATE
#include <stdio.h>
#include <locale.h>
#include <time.h>


void main() {
    setlocale(LC_ALL, "RUS");
    char str[80];
    struct tm* mytime;
    time_t t;
    t = time(NULL);
    mytime = localtime(&t);
    printf("Московское время: %02d:%02d:%02d\n", mytime->tm_hour, mytime->tm_min, mytime->tm_sec);
    switch (mytime->tm_wday) {
      case 1: printf("День недели (словами): понедельник\n"); break;
      case 2: printf("День недели (словами): вторник\n"); break;
      case 3: printf("День недели (словами): среда\n"); break;
      case 4: printf("День недели (словами): четверг\n"); break;
      case 5: printf("День недели (словами): пятница\n"); break;
      case 6: printf("День недели (словами): суббота\n"); break;
      case 7: printf("День недели (словами): воскресенье\n"); break;
    }
    sprintf(str, "************************Московское время: %02d:%02d:%02d************************", mytime->tm_hour, mytime->tm_min, mytime->tm_sec);
    printf("\n%s", str);
}
