#define _CRT_SECURE_NO_DEPRECATE
#include <stdio.h>
#include <locale.h>


void main() {
	setlocale(LC_ALL, "RUS");
	long long int N, sum1 = 0, a, b;
	int n = 0;

	while (1) {
		char a;

	  printf("Введите произвольное число с чётным количеством разрядов:");
	  scanf("%lld", &N); 
	  printf("Введено число %lld\n", N);
	  while (N > 0) {
	  	n++;
	  	N /= 10;
	  }
	  printf("В числе %d разряд(а/ов)\n\n", n);
	 
	  while ((n / 2) > 0) {
		  a = N / pow(10, n + 1);
		  sum1 += a;
		  n--;
	  }
	  printf(" sum1 = %lld", sum1);
	  
	  
	  
	  
	  n = 0;
	  N = 0;
	  
	printf("Продолжить? (Да - y, нет - n)"); 
	getchar();
	if ((a = getchar()) == 'n') break;
	}
}
