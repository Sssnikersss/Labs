#include <stdlib.h>
#include <stdio.h>
int init_massive();
void sort_buble(int* ptrarr, int n);
void sort_select(int* ptrarr, int n);
void sort_insert(int* ptrarr, int n);

int main()
{
    int n = 6;
    int* massive;
    massive = (int*)malloc(n * sizeof(int));
    for (int i = 0; i < n; i++) {
        massive[i] = rand() % 100;
    }
    
    int n = 6;
    sort_buble(massive,n);
    sort_select(massive,n);
    

}
void sort_buble(int *ptrarr, int n) {
    
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            if (ptrarr[i] < ptrarr[i + 1]) {
                ptrarr[i+1] = ptrarr[i];
            }
        }
    }
    for (int i = 0; i < n; i++) {
        printf("%d ", ptrarr[i]);
    }
    printf("\n");
}
void sort_select(int* ptrarr, int n) {
    int max,nom,k,b;
    k = n;
    for (int i = 0; i < n; i++) {
        max = ptrarr[0];
        nom = 0;
        for (int j = 0; j < n; j++) {
            if (ptrarr[i] > max) {
                max = ptrarr[i];
                nom = i;
            }
        }
        b = ptrarr[k - 1];
        ptrarr[k - 1] = ptrarr[nom];
        ptrarr[nom] = b;
        k--;

    }
    for (int i = 0; i < n; i++) {
        printf("%d ", ptrarr[i]);
    }
    printf("\n");
}
