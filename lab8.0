#define _CRT_SECURE_NO_DEPRECATE
#include <stdio.h>
#include <locale.h>


int main() {
	setlocale(LC_ALL, "RUS");
	int x;
	char y, z;

	printf("Введите количество печатаемых символов: ");
	scanf("%d", &x); getchar();
	printf("Введите вид печатаемых символов первой половины: ");
	scanf("%c", &y); getchar();
	printf("Введите вид печатаемых символов второй половины: ");
	scanf("%c", &z); getchar();

	putchar('+');

	for (int start = 1; start <= x / 2; start++) {
		putchar(y);
		putchar('!');
	}
	for (int start = x / 2; start <= x; start++) {
		putchar(z);
		putchar('!');
	}
	return 0;
}
