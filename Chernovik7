    int* massive;
    printf("Введите размер массива: ");
    scanf("%d", &N);
    printf("\n");

    massive = (int*)malloc(N * sizeof(int));
    for (int i = 0; i < N; i++) {
        massive[i] = rand() % 100;
    }
    printf("Начальный массив:\n");
    put_elements(massive, N);
    printf("\n");

    sort_buble(massive, N);
    printf("Отсортированный массив:\n");
    put_elements(massive, N);
    printf("\n");


    massive = (int*)malloc(N * sizeof(int));
